# Copy to .env.local and set your secrets
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# Mapbox token from https://account.mapbox.com/
VITE_MAPBOX_TOKEN=
/* .env.example */
# API Keys (Replace with your actual keys)
REACT_APP_HF_API_KEY=your_huggingface_api_key_here
REACT_APP_TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
REACT_APP_YOUTUBE_API_KEY=your_youtube_api_key_here
REACT_APP_FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here
REACT_APP_MAPBOX_TOKEN=your_mapbox_token_here

# WebSocket URL for real-time updates
REACT_APP_WS_URL=ws://localhost:8080

# Google Translate API Key
VITE_GOOGLE_TRANSLATE_KEY=

# EXIF Verification Settings
VITE_EXIF_DELAY_HOURS=3     # default threshold (hours) to consider upload "delayed"
VITE_EXIF_LOCATION_KM=5     # max km between browser location and image EXIF to be considered matching

# IMD Verification Settings (Optional)
VITE_IMD_API_URL=           # optional: e.g. https://api.example.gov/imd/verify
VITE_IMD_API_KEY=           # optional

# API Base URL
REACT_APP_API_BASE_URL=http://localhost:3001/api